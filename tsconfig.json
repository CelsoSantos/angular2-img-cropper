{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "removeComments": true,
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "moduleResolution": "node",
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "runtime"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : false
  }
}
